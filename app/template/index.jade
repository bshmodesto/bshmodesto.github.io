  body
    <!-- Navigation -->
    nav(class='navbar navbar-default navbar-fixed-top topnav', role='navigation')
        div(class='container topnav')
            <!-- Brand and toggle get grouped for better mobile display -->
            div(class='navbar-header')
                button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span(class='sr-only') Toggle navigation
                    span(class='icon-bar')
                    span(class='icon-bar')
                    span(class='icon-bar')
                a(class='navbar-brand topnav', href='#') Better Speech and Hearing Modesto

            <!-- Collect the nav links, forms, and other content for toggling -->
            div(class='collapse navbar-collapse', id='bs-example-navbar-collapse-1')
                ul(class='nav navbar-nav navbar-right')
                    li
                        a(href='#about') About
                    li
                        a(href='#event') A's vs. Giants Fundraiser
                    li
                        a(href='#contact') Contact


            <!-- /.navbar-collapse -->

        <!-- /.container -->



    <!-- Header -->
    a(name='about')
    div(class='intro-header parallax-window', data-parallax='scroll', data-speed='0.5', data-image-src='/images/classroom.jpg')
        div(class='container')

            div(class='row')
                div(class='col-lg-12')
                    div(class='intro-message')
                        h1 Better Speech and Hearing Modesto
                        h3 Helping children with Speech-Language disabilities enjoy local events
                        hr(class='intro-divider')
                        ul(class='list-inline intro-social-buttons')
                            li
                                a(href='https://twitter.com/betterspeechmodesto', target='_blank', class='btn btn-default btn-lg') #[i(class='fa fa-twitter fa-fw')] #[span(class='network-name') Twitter]
                            li
                                a(href='https://instagram.com/betterspeechmodesto', target='_blank', class='btn btn-default btn-lg') #[i(class='fa fa-instagram fa-fw')] #[span(class='network-name') Instagram]
                            li
                                a(href='mailto:info@betterspeechmodesto.org', class='btn btn-default btn-lg') #[i(class='fa fa-envelope fa-fw')] #[span(class='network-name') E-mail]

        <!-- /.container -->


    <!-- /.intro-header -->

    <!-- Page Content -->

    a(name='about')
    div(class='content-section-a')
      div(class='container')
            div(class='row')
                div(class='col-lg-5 col-sm-6')
                    hr(class='section-heading-spacer')
                    div(class='clearfix')
                    h2(class='section-heading') About:
                    p(class='lead') Based in California's Stanislaus County, Better Speech and Hearing Modesto was founded with the goal of helping children with Speech-Language disabilities enjoy local events. We currently provide reduced price tickets for local baseball games as a way to raise awareness for better speech and hearing services available to today's youth.

                div(class='col-lg-5 col-lg-offset-2 col-sm-6')
                    img(class='img-responsive', src='images/chalkboard.jpg', alt='')
        <!-- /.container -->

    a(name='event')
    div(class='content-section-a')

        div(class='container')
            div(class='row')
                div(class='col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6')

                    hr(class='section-heading-spacer')

                    div(class='clearfix')
                    h2(class='section-heading') 2016 Giants vs. A's Fundraising Event:
                    p(class='lead') To help raise funds to pay for local events for speech-language students we are hosting an Oakland A's vs. SF Giants fundraising game.
                    p(class='lead')
                      ul(class='')
                        li Oakland A's vs. SF Giants - Saturday, April 2, 2016
                        li First pitch at 1:05pm
                        li Seating Area: Field Level
                        li Ticket Price: $65 (cost includes delicious, catered tailgate lunch)
                        li A portion of your ticket cost will help low-income Speech families attend baseball games!
                    p Please #[a(href='mailto:info@betterspeechmodesto.org') email] us for more information.
                div(class='col-lg-5 col-sm-pull-6  col-sm-6')
                    img(class='img-responsive', src='images/coliseum.jpg', alt='')

        <!-- /.container -->
    <!-- /.content-section-a -->

    a(name='contact')
    div(class='banner parallax-window', data-parallax='scroll', data-speed='0.5', data-image-src='/images/baseball_glove.jpg')

        div(class='container')

            div(class='row')
                div(class='col-lg-6')
                    h2 Connect to Better Speech and Hearing Modesto:

                div(class='col-lg-6')
                    ul(class='list-inline banner-social-buttons')
                      li
                          a(href='https://twitter.com/betterspeechmodesto', target='_blank', class='btn btn-default btn-lg') #[i(class='fa fa-twitter fa-fw')] #[span(class='network-name') Twitter]
                      li
                          a(href='https://instagram.com/betterspeechmodesto', target='_blank', class='btn btn-default btn-lg') #[i(class='fa fa-instagram fa-fw')] #[span(class='network-name') Instagram]
                      li
                          a(href='mailto:info@betterspeechmodesto.org', class='btn btn-default btn-lg') #[i(class='fa fa-envelope fa-fw')] #[span(class='network-name') E-mail]

        <!-- /.container -->


    <!-- /.banner -->

    <!-- Footer -->
    footer
        div(class='container')
            div(class='row')
                div(class='col-lg-12')
                    ul(class='list-inline')
                        li
                            a(href='#') Home

                        li(class='footer-menu-divider')
                             &sdot;
                        li
                            a(href='#about') About

                        li(class='footer-menu-divider')
                            &sdot;
                        li
                            a(href='#event') A's vs. Giants Fundraiser

                        li(class='footer-menu-divider')
                            &sdot;
                        li
                            a(href='#contact') Contact


                    p(class='copyright text-muted small') Copyright &copy; Better Speech and Hearing Modesto 2016. All Rights Reserved
                    p(class='copyright text-muted small') Select photography by #[a(href='https://www.flickr.com/photos/csessums/', target='_blank') Christopher Sessums] and #[a(href='https://www.flickr.com/photos/cleopold73/', target='_blank') Corey Leopold]

